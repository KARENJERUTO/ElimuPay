<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0A220F"
    tools:context=".paymentmethods.MpesaPayment">

  <!-- CardView to hold the content -->
  <androidx.cardview.widget.CardView
      android:id="@+id/cardViewMpesaPayment"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_margin="16dp"
      app:cardCornerRadius="12dp"
      app:cardElevation="6dp"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintBottom_toBottomOf="parent"
      app:cardBackgroundColor="#FFF8E1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

      <!-- Title TextView -->
      <TextView
          android:id="@+id/textViewPayWithMpesa"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Pay with M-Pesa"
          android:textSize="24sp"
          android:textStyle="bold"
          android:textColor="#CC5500"
          android:gravity="center"
          android:layout_gravity="center"
          android:layout_marginBottom="16dp" />

      <!-- M-Pesa Logo ImageView -->
      <ImageView
          android:id="@+id/imageViewMpesaLogo"
          android:layout_width="250dp"
          android:layout_height="100dp"
          app:srcCompat="@drawable/mpesa"
          android:layout_gravity="center"
          android:layout_marginBottom="16dp" />

      <!-- Phone Number Input -->
      <com.google.android.material.textfield.TextInputEditText
          android:id="@+id/editPhoneNumber"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="16dp"
          android:backgroundTint="#CC5500"
          android:hint="Phone Number"
          android:inputType="phone"
          tools:ignore="TouchTargetSizeCheck" />

      <!-- Pay Button -->
      <com.google.android.material.button.MaterialButton
          android:id="@+id/mpesapay"
          android:layout_width="match_parent"
          android:layout_height="60dp"
          android:backgroundTint="#CC5500"
          android:onClick="showPay"
          android:text="Pay"
          android:textColor="@android:color/white"
          app:iconGravity="textStart"
          app:iconSize="24dp"
          app:iconTint="@android:color/white" />

    </LinearLayout>

  </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
