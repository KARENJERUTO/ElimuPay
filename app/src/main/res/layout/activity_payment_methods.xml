<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#F5F5F5"
    android:id="@+id/paymentmethods"
    tools:context=".paymentmethods.PaymentMethods">

    <TextView
        android:id="@+id/textPaymentMethods"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Payment Methods"
        android:textSize="20sp"
        android:textColor="#003366"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp" />

    <!-- Payment Methods as Radio Buttons -->
    <RadioGroup
        android:id="@+id/radioGroupPaymentMethods"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/textPaymentMethods"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp">

        <RadioButton
            android:id="@+id/radioMpesa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="M-Pesa"
            android:textSize="16sp"
            android:textColor="#1F3A93" />

        <RadioButton
            android:id="@+id/radioCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Credit / Debit Card"
            android:textSize="16sp"
            android:textColor="#003366" />

        <RadioButton
            android:id="@+id/radioECitizen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="eCitizen"
            android:textSize="16sp"
            android:textColor="#003366" />

        <RadioButton
            android:id="@+id/radioBankAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bank Account"
            android:textSize="16sp"
            android:textColor="#003366" />

        <RadioButton
            android:id="@+id/radioLipaMdogoMdogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lipa Mdogo Mdogo"
            android:textSize="16sp"
            android:textColor="#003366" />
    </RadioGroup>

    <!-- Confirm Button -->
    <Button
        android:id="@+id/btnConfirmPayment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm Payment"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        android:backgroundTint="#1F3A93"
        app:layout_constraintTop_toBottomOf="@id/radioGroupPaymentMethods"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="32dp"
        android:layout_marginStart="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
