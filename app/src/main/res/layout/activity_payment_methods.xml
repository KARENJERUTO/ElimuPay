<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PaymentMethods">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Payment Method"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- Wrap the RadioGroup inside a ScrollView -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fillViewport="true">

            <RadioGroup
                android:id="@+id/paymentMethodGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/imgbin_bank_of_montreal_mastercard_debit_card_credit_card_atm_card_png"
                    android:padding="8dp"
                    android:scaleX="0.75"
                    android:scaleY="0.75"/>
                    <RadioButton
                        android:id="@+id/creditCard"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Credit Card"
                        android:layout_marginStart="8dp"
                        android:layout_gravity="center"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="2dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/stock_vector_vector_illustration_of_detailed_glossy_red_credit_card_isolated_on_white_background_119858641"
                        android:padding="8dp"
                        android:scaleX="0.75"
                        android:scaleY="0.75"/>
                    <RadioButton
                        android:id="@+id/debitcard"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Debit Card"
                        android:layout_marginStart="8dp"
                        android:layout_gravity="center"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="2dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/mpesa"
                        android:background="@drawable/card_background"
                        android:padding="8dp"
                        />
                    <RadioButton
                        android:id="@+id/Mpesa"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mpesa"
                        android:layout_marginStart="8dp"
                        android:layout_gravity="center"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/equity"
                        android:background="@drawable/card_background"
                        android:padding="8dp"
                        android:scaleX="0.75"
                        android:scaleY="0.75"/>
                    <RadioButton
                        android:id="@+id/Equity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Equity"
                        android:layout_marginStart="8dp"
                        android:layout_gravity="center"/>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ecitizen"
                        android:background="@drawable/card_background"
                        android:padding="8dp"
                        android:scaleX="0.75"
                        android:scaleY="0.75"/>
                    <RadioButton
                        android:id="@+id/eCitizen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="eCitizen"
                        android:layout_marginStart="8dp"
                        android:layout_gravity="center"/>
                </LinearLayout>


            </RadioGroup>

        </ScrollView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
